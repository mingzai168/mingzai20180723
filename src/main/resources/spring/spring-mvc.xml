    <bean id="stringConverter" class="org.springframework.http.converter.StringHttpMessageConverter">
        <property name="supportedMediaTypes">
            <list>
                <value>text/plain;charset=UTF-8</value>
            </list>
        </property>
    </bean>

    <!-- 输出对象转JSON支持 -->
    <bean id="jsonConverter"
          class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter">
        <property name="supportedMediaTypes">
            <list>
                <value>application/json;charset=UTF-8</value>
            </list>
        </property>
    </bean>


    <!-- 上传文件 -->
    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <property name="defaultEncoding" value="utf-8"></property>
        <property name="maxUploadSize" value="10485760000"></property>
        <property name="maxInMemorySize" value="40960"></property>
    </bean>


    <aop:config proxy-target-class="true"></aop:config>
    <bean class="org.apache.shiro.spring.security.interceptor.AuthorizationAttributeSourceAdvisor">
        <property name="securityManager" ref="securityManager"/>
    </bean>

    <bean id="exceptionResolver" class="org.springframework.web.servlet.handler.SimpleMappingExceptionResolver">
        <property name="exceptionMappings">
            <props>
                <prop key="org.apache.shiro.authc.*">error</prop>
            </props>
        </property>
    </bean>
    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/console/**"/>
            <mvc:exclude-mapping path="/**/*.html"/>
            <mvc:exclude-mapping path="/ueditor/**"/>
            <mvc:exclude-mapping path="/upload/**"/>
            <bean class="cn.zttek.thesis.modules.interceptor.ParamIntercepter"/>
        </mvc:interceptor>
        <mvc:interceptor>
            <mvc:mapping path="/console/**"/>
            <mvc:exclude-mapping path="/**/*.html"/>
            <mvc:exclude-mapping path="/ueditor/**"/>
            <mvc:exclude-mapping path="/upload/**"/>
            <bean class="cn.zttek.thesis.modules.interceptor.LoginIntercepter"/>
        </mvc:interceptor>
        <mvc:interceptor>
            <mvc:mapping path="/console/attr/list"/>
            <mvc:mapping path="/console/arch/list-admin"/>
            <mvc:mapping path="/console/arch/list-teacher"/>
            <mvc:mapping path="/console/arch/list-student"/>
            <mvc:mapping path="/console/project/list"/>
            <mvc:mapping path="/console/thesis/listAll"/>
            <bean class="cn.zttek.thesis.modules.interceptor.OrgIntercepter"/>
        </mvc:interceptor>
        <mvc:interceptor>
            <mvc:mapping path="/console/thesis/list"/>
            <mvc:mapping path="/console/treply/list"/>
            <mvc:mapping path="/console/tapply/list"/>
            <mvc:mapping path="/console/tapply/result"/>
            <mvc:mapping path="/console/ttask/list"/>
            <mvc:mapping path="/console/tmidcheck/list"/>
            <mvc:mapping path="/console/tcheck/list"/>
            <mvc:mapping path="/console/tcount/list"/>
            <mvc:mapping path="/console/project/users"/>
            <bean class="cn.zttek.thesis.modules.interceptor.ProjectIntercepter"/>
        </mvc:interceptor>
    </mvc:interceptors>
</beans>
